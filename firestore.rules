rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }

    function isSignedIn() {
      return request.auth != null;
    }
    
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    match /users/{userId} {
      allow read, update: if request.auth.uid == userId;
      allow create: if isSignedIn();
    }
    
    match /courses/{courseId} {
      allow read: if resource.data.active == true;
    }
    
    match /courses/{courseId}/cohorts/{cohortId} {
       allow read: if get(/databases/$(database)/documents/courses/$(courseId)).data.active == true;
    }
    
    match /courses/{courseId}/cohorts/{cohortId}/attendees/{attendeeId} {
      allow read, create, update: if isSignedIn();
    }

    match /lists/{listId} {
        allow read: if resource.data.isPublic == true;
    }

    match /subscriptions/{subscriptionId} {
        allow read, create, update: if isSignedIn() && request.auth.token.email == resource.data.subscriberId;
    }
    
    // Self-paced learning rules
    match /enrollments/{enrollmentId} {
      allow read, create, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /progress/{progressId} {
      allow read, create, update, delete: if isSignedIn() && request.auth.uid == resource.data.userId;
    }

    match /quizAttempts/{attemptId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && request.auth.uid == resource.data.userId;
      // updates/deletes: admin only via global override
    }

    match /certificates/{certificateId} {
      allow read: if true; // Publicly verifiable
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // updates/deletes: admin only via global override
    }
  }
}
